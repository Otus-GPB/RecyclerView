<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/chat_image"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/photo_1" />

    <TextView
        android:id="@+id/chat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:text="@string/pizza"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/chat_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="@string/jija"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/chat_image"
        app:layout_constraintTop_toBottomOf="@+id/chat_title" />

    <ImageView
        android:id="@+id/message_image_preview"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/chat_details"
        app:layout_constraintTop_toBottomOf="@+id/chat_details"
        tools:src="@drawable/preview_1" />

    <TextView
        android:id="@+id/message_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/yes_they_are_necessary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/message_image_preview"
        app:layout_constraintStart_toEndOf="@+id/message_image_preview"
        app:layout_constraintTop_toTopOf="@+id/message_image_preview" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        android:id="@+id/barrier_official"
        app:constraint_referenced_ids="chat_title, image_official"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="barrier_official, image_mute"/>

    <ImageView
        android:id="@+id/image_official"
        android:layout_width="13.76dp"
        android:layout_height="13.76dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_title"
        app:layout_constraintStart_toEndOf="@+id/chat_title"
        app:layout_constraintTop_toTopOf="@+id/chat_title"
        tools:src="@drawable/official" />

    <ImageView
        android:id="@+id/image_mute"
        android:layout_width="10.59dp"
        android:layout_height="11.65dp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_title"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/chat_title"
        app:layout_constraintStart_toEndOf="@+id/barrier_official"
        tools:src="@drawable/mute" />

    <TextView
        android:id="@+id/message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_11_38_am"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_read"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/message_date"
        app:layout_constraintEnd_toStartOf="@+id/message_date"
        app:layout_constraintTop_toTopOf="@+id/message_date"
        tools:src="@drawable/read" />

    <TextView
        android:id="@+id/messages_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/_1"
        android:background="@drawable/circle_view"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_date" />

    <ImageView
        android:id="@+id/image_scam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/barrier_mute"
        app:layout_constraintBottom_toBottomOf="@+id/chat_title"
        app:layout_constraintTop_toTopOf="@+id/chat_title"
        app:srcCompat="@drawable/scam" />

</androidx.constraintlayout.widget.ConstraintLayout>